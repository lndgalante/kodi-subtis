<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.subtitles.subtis"
       name="Subtis Subtitles"
       version="0.8.7"
       provider-name="Subtis">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.subtitle.module"
             library="service.py">
    <language>en</language>
    <language>es</language>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Subtitles service for Subtis</summary>
    <summary lang="es">Servicio de subtítulos de subtis</summary>
    <description lang="en">Downloads subtitles from the Subtis service</description>
    <description lang="es">Descarga subtítulos desde el servicio de subtis</description>
    <platform>all</platform>
    <license>GPL-2.0-or-later</license>
    <website>https://subtis.io/</website>
    <source>https://github.com/lndgalante/kodi-subtis</source>
    <news>v0.8.7 - Initial Release</news>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>
